<% if flash[:notice] %>
 <p><%= flash[:notice]%></p>
<% end %>

<%= render 'books/list'%>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tr>
<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>

<%= link_to @user.name,user_path(@user) %></td>

<td><%= link_to @book.title %></td>

<td><%= @book.body %></td>

<td><% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success'  %>
 <% end %>
 </td>

 <td><% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' %>
  <% end %>
  </td>
</table>
</div>
</div>
</div>