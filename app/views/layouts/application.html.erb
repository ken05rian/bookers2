<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="header">
   <nav>
    <div class="container">
      <div class="row">
       <div class="col-lg-4">
         <a class="navbar-brand p-3" href="/">Bookers</a>
       </div>
       <div class="col-lg-8">
         <ul class="nav-list">
         <% if user_signed_in? %>
         <i class="fas fa-home"><%= link_to 'Home', user_path(current_user.id) %></i>

         <i class="fas fa-users"><%= link_to 'Users', users_path %></i>

         <i class="fas fa-book-open"><%= link_to 'Books', books_path%></i>

         <i class="fas fa-sign-out-alt"><%= link_to "logout", destroy_user_session_path, method: :delete %></i>

         <% else %>
         <i class="fas fa-home"><%= link_to 'Home', root_path  %></i>

         <i class="fas fa-link"><%= link_to "About", home_about_path %></i>

         <i class="fas fa-user-plus"><%= link_to "sign up", new_user_registration_path %></i>

         <i class="fas fa-sign-in-alt"><%= link_to "login", new_user_session_path %></i>

         <% end %>
         </ul>
        </div>
      </div>
     </div>
    </nav>
  </header>
  <main class="main">
        <%= yield %>
  </main>
  <footer>
      <p class="footer-text">CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>
